    <!-- Header -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                     <p class="intro-text">Pick an aspect of your choosing</p>
                </div>
            </div>
        </div>
    </section>

      <section id="">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 grids" ng-repeat="aspect in aspects" ng-if="$index==0">
                    <div class="aspect_grid1" ng-style={'background-color':"#F68B1F"} ng-click="goToQuestionsPage(aspect)" ng-if="$index==0">
                        {{aspect.aspectName}}
                    </div>
                </div>
                <div class="col-sm-12 grids" ng-repeat="aspect in aspects" ng-if="$index==1">
                    <div class="aspect_grid1" ng-style={'background-color':"#2FBCD0"} ng-click="goToQuestionsPage(aspect)" ng-if="$index==1">
                        {{aspect.aspectName}}
                    </div>
                </div>
                <div class="col-sm-12 grids" ng-repeat="aspect in aspects" ng-if="$index==2">
                    <div class="aspect_grid1" ng-style={'background-color':"#EC74A9"} ng-click="goToQuestionsPage(aspect)" ng-if="$index==2">
                        {{aspect.aspectName}}
                    </div>
                </div>
                <div class="col-sm-12 grids" ng-repeat="aspect in aspects" ng-if="$index==3">
                    <div class="aspect_grid1" ng-style={'background-color':"#F15A6B"} ng-click="goToQuestionsPage(aspect)" ng-if="$index==3">
                        {{aspect.aspectName}}
                    </div>
                </div>

            </div>
        </div>
    </section>

    <div>
        <button class="btn btn-primary" id="questionID10" style="display:none;"  ng-click="loga()">
